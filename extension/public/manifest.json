{
	"manifest_version": 3,
	"name": "Mindapp",
	"version": "1.0.0",
	"icons": { "1024": "mindapp-logo.png" },
	"description": "Save thoughts with `Alt m`",
	"permissions": ["contextMenus"],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		},
		{
			"matches": [
				"http://localhost:8888/*",
				"http://new.mindapp.cc/*",
				"https://new.mindapp.cc/*",
				"http://mindapp.cc/*",
				"https://mindapp.cc/*"
			],
			"css": ["styles.css"]
		}
	]
}
